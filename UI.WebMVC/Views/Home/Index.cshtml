@{
    ViewBag.Title = "Login Page";
}

@using Academia.Entities
@model usuarios

<div class="jumbotron">
    <h1>Universidad Tecnológica Rosario</h1>
    <p class="lead">Ingreso al sistema</p>
</div>

<div class="container">
    <div class="row align-items-center">
        <div class="col-md-6">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Usuario", FormMethod.Post))
                {
                    <h4>Utilice una cuenta local para iniciar sesión.</h4>
                    <hr />

                    <p class="alert-danger">@ViewBag.ErrorMessage</p>

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.nombre_usuario, new { @class = "form-control", placeholder = "Ingrese su nombre de usuario" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.clave, new { @class = "form-control", placeholder = "Ingrese su contraseña" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Iniciar sesión" class="btn btn-default" />
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</div>
