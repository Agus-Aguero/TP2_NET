@model IEnumerable<Academia.Entities.cursos>


@{
    ViewBag.Title = "Cursos";
    var usuario = Session["User"] as Academia.Entities.usuarios;
}

<h1>@ViewBag.Materia.desc_materia</h1>

@if (Model.ToList().Count == 0)
{
    <h2>No hay comisiones disponibles</h2>
}
else
{
    <h2>Comisiones disponibles</h2>

    <table class="table">
        <tr>
            <th>
                Comisión
            </th>
            <th>
                Curso
            </th>
            <th>
                Año
            </th>
            <th>
                Cupo
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {

            
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id_comision)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.id_curso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.anio_calendario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cupo)
                    </td>
                    <td>
                        @if(item.cupo != 0)
                        {
                            if (usuario.personas.tipo_persona == Academia.Util.TipoPersona.Alumno)
                            {
                                @Html.ActionLink("Registrarme", "InscribirAlumno", "Curso", new { idAlumno = usuario.id_persona, idCurso = item.id_curso }, null)
                            }
                            else if ((usuario.personas.tipo_persona == Academia.Util.TipoPersona.Docente))
                            {
                                @Html.ActionLink("Registrarme", "InscribirDocente", "Curso", new { idDocente = usuario.id_persona, idCurso = item.id_curso }, null)
                            }
                        } else
                        {
                            <b>Sin cupo</b>
                        }

                    </td>
                </tr>
        }

    </table>
}


<div class="text-center">
    <h4>@Html.ActionLink("Volver", "", "materias")</h4>
</div>
