@model IEnumerable<Academia.Entities.materias>

@{
    ViewBag.Title = "Asignaturas";
    var usuario = Session["User"] as Academia.Entities.usuarios;
    bool inscripto = false;
}

<h2>Asignaturas</h2>

<table class="table">
    <tr>
        <th>
            Plan
        </th>
        <th>
           Asignatura
        </th>
        <th>
           Hs semanales
        </th>
        <th>
           Hs totales
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.planes.desc_plan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.desc_materia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hs_semanales)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hs_totales)
            </td>
            <td>
                @foreach (var inscripcion in usuario.personas.alumnos_inscripciones)
                {
                    if (inscripcion.cursos.id_materia == item.id_materia)
                    {
                        inscripto = true;
                        break;
                    } else
                    {
                        inscripto = false;
                    }
                }
                @if (inscripto)
                {
                    @Html.DisplayFor(modelItem => item.hs_totales)

                }
                else
                {
                    @Html.ActionLink("Inscribirme", "Cursos", new { idMateria = item.id_materia })
                }
            </td>
        </tr>
    }

</table>
<div class="text-center">
    <h4>@Html.ActionLink("Volver", "Index", "Usuario", new { id = usuario.id_persona }, null)</h4>
</div>